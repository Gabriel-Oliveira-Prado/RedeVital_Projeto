@{
    ViewData["Title"] = "Vacinas";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>

    <!-- Cards na mesma linha -->
    <div class="row mb-5">
        <!-- Card Campanhas -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-bullhorn mr-2"></i>Campanhas</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Gerencie e acompanhe todas as campanhas de vacinação em andamento.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fas fa-check-circle text-success mr-2"></i>3 campanhas ativas</li>
                        <li class="list-group-item"><i class="fas fa-clock text-warning mr-2"></i>2 campanhas programadas</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="#" class="btn btn-primary btn-block">Gerenciar Campanhas</a>
                </div>
            </div>
        </div>

        <!-- Card Estoque -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-boxes mr-2"></i>Estoque</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Controle completo do estoque de vacinas e insumos.</p>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <p class="text-center"><small>75% do estoque disponível</small></p>
                    <p class="text-center"><span class="badge badge-warning">5 tipos com baixo estoque</span></p>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="#" class="btn btn-success btn-block">Ver Estoque Completo</a>
                </div>
            </div>
        </div>

        <!-- Card Histórico -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-history mr-2"></i>Histórico</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Registro completo de todas as vacinas aplicadas.</p>
                    <div class="text-center mb-3">
                        <h4>12,548</h4>
                        <p class="text-muted">aplicações este mês</p>
                    </div>
                    <div class="alert alert-info small">
                        <i class="fas fa-info-circle mr-2"></i>Dados atualizados em tempo real
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="#" class="btn btn-info btn-block">Consultar Histórico</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção de Relatórios e Estatísticas -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-purple text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-chart-bar mr-2"></i>Relatórios e Estatísticas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-syringe mr-2"></i>Cobertura Vacinal</h6>
                            <div class="chart-container" style="height: 200px;">
                                <!-- Espaço para gráfico de cobertura -->
                                <img src="https://via.placeholder.com/500x200?text=Gráfico+de+Cobertura+Vacinal" class="img-fluid" alt="Gráfico de Cobertura">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-calendar-alt mr-2"></i>Campanhas por Mês</h6>
                            <div class="chart-container" style="height: 200px;">
                                <!-- Espaço para gráfico de campanhas -->
                                <img src="https://via.placeholder.com/500x200?text=Gráfico+de+Campanhas" class="img-fluid" alt="Gráfico de Campanhas">
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-primary">85%</h3>
                                    <p class="text-muted">Cobertura média</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-success">24</h3>
                                    <p class="text-muted">Campanhas este ano</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-info">98%</h3>
                                    <p class="text-muted">Doses utilizadas</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-purple mr-2"><i class="fas fa-download mr-2"></i>Exportar PDF</button>
                    <button class="btn btn-outline-secondary"><i class="fas fa-print mr-2"></i>Imprimir</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #6f42c1;
    }

    .btn-purple {
        background-color: #6f42c1;
        color: white;
    }

        .btn-purple:hover {
            background-color: #5a32a3;
            color: white;
        }
</style>
@{
    ViewData["RedeVital"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="Comprar.css">
    <body class="content-body">
        <div class="container-fluid">
            <div class="row">
                <!-- Main Content -->
                <div class="col-xl-12">
                    <h1 class="mt-4">Resumo do Dia</h1>

                    <!-- First Row - Summary Cards -->
                    <div class="row mt-4">
                        <!-- Total Consultas Agendadas -->
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Consultas agendadas hoje
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">24</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Consultas Realizadas -->
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Consultas realizadas
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">18</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pendentes/Atrasadas -->
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Pendentes/Atrasadas
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">6</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Second Row - Two Columns -->
                    <div class="row">
                        <!-- Agenda de Consultas -->
                        <div class="col-xl-6 col-lg-6 mb-4">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Agenda de Consultas</h6>
                                </div>
                                <div class="card-body">
                                    <div class="list-group">
                                        <a href="#" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">Maria Oliveira</h5>
                                                <small>09:00 - 09:30</small>
                                            </div>
                                            <p class="mb-1">Consulta de rotina</p>
                                            <small>Status: Pendente</small>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">Carlos Souza</h5>
                                                <small>10:15 - 10:45</small>
                                            </div>
                                            <p class="mb-1">Acompanhamento pós-operatório</p>
                                            <small>Status: Realizada</small>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">Patrícia Mendes</h5>
                                                <small>11:30 - 12:00</small>
                                            </div>
                                            <p class="mb-1">Primeira consulta</p>
                                            <small>Status: Atrasada</small>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Últimos Prontuários Acessados -->
                        <div class="col-xl-6 col-lg-6 mb-4">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Últimos Prontuários Acessados</h6>
                                </div>
                                <div class="card-body">
                                    <div class="list-group">
                                        <a href="#" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">João Silva</h5>
                                                <small class="text-muted">06/05/2025</small>
                                            </div>
                                            <p class="mb-1">Histórico de hipertensão</p>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">Ana Beatriz</h5>
                                                <small class="text-muted">04/05/2025</small>
                                            </div>
                                            <p class="mb-1">Controle de diabetes</p>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">Roberto Almeida</h5>
                                                <small class="text-muted">03/05/2025</small>
                                            </div>
                                            <p class="mb-1">Acompanhamento cardiológico</p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notificações Importantes -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 mb-4">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">🧾 Notificações Importantes</h6>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-warning" role="alert">
                                        <strong>Atualização de protocolos!</strong> Novos protocolos de atendimento estão disponíveis para revisão.
                                    </div>
                                    <div class="alert alert-danger" role="alert">
                                        <strong>Manutenção programada!</strong> O sistema ficará indisponível no sábado (10/05) das 00:00 às 04:00.
                                    </div>
                                    <div class="alert alert-info" role="alert">
                                        <strong>Novo recurso disponível!</strong> Agora você pode gerar relatórios personalizados diretamente do sistema.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Font Awesome for icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

        <!-- Bootstrap core CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">


    </body>
</head>
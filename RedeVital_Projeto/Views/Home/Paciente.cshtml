                .patient-container .search-bar input {
                    flex: 1;
                    padding: 12px 15px;
                    border: none;
                    border-radius: 5px 0 0 5px;
                    font-size: 14px;
                }

                .patient-container .search-bar button {
                    background-color: #4e73df;
                    color: white;
                    border: none;
                    padding: 0 20px;
                    border-radius: 0 5px 5px 0;
                    cursor: pointer;
                }

            .patient-container .filter-tags {
                display: flex;
                overflow-x: auto;
                gap: 8px;
                margin-top: 10px;
                padding-bottom: 5px;
                -webkit-overflow-scrolling: touch;
            }

                .patient-container .filter-tags::-webkit-scrollbar {
                    display: none;
                }

            .patient-container .tag {
                background-color: #f8f9fc;
                border: 1px solid #d1d3e2;
                border-radius: 15px;
                padding: 5px 12px;
                font-size: 12px;
                white-space: nowrap;
                cursor: pointer;
            }

                .patient-container .tag.active {
                    background-color: #4e73df;
                    color: white;
                    border-color: #4e73df;
                }

            .patient-container .floating-buttons {
                position: absolute;
                bottom: 20px;
                right: 20px;
                display: flex;
                flex-direction: column;
                gap: 10px;
                z-index: 99;
            }

            .patient-container .floating-btn {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                background-color: #4e73df;
                color: white;
                display: flex;
                justify-content: center;
                align-items: center;
                box-shadow: 0 3px 10px rgba(0,0,0,0.2);
                cursor: pointer;
            }


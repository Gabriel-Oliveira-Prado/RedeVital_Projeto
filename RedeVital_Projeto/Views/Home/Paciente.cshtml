            .patient-container .health-resources {
                background-color: white;
                border-radius: 8px;
                padding: 20px;
                box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            }

            .patient-container .resource-section {
                margin-bottom: 20px;
            }

                .patient-container .resource-section h3 {
                    color: #4e73df;
                    font-size: 16px;
                    margin-bottom: 15px;
                    font-weight: 600;
                }

            .patient-container .resource-item {
                display: flex;
                align-items: center;
                padding: 10px 0;
                border-bottom: 1px solid #e3e6f0;
            }

                .patient-container .resource-item i {
                    margin-right: 10px;
                    color: #4e73df;
                    width: 20px;
                    text-align: center;
                }

            /* Modal styles */
            .patient-container .modal {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0,0,0,0.5);
                z-index: 1000;
                justify-content: center;
                align-items: flex-end;
            }

            .patient-container .modal-content {
                background-color: white;
                width: 100%;
                max-height: 70vh;
                border-radius: 20px 20px 0 0;
                padding: 20px;
                overflow-y: auto;
                animation: slideUp 0.3s ease;
            }

            .patient-container .modal-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 15px;
            }

                .patient-container .modal-header h2 {
                    color: #4e73df;
                    font-size: 1.5rem;
                    font-weight: 600;
                }

            .patient-container .close-btn {
                background: none;
                border: none;
                font-size: 20px;
                cursor: pointer;
                color: #5a5c69;
            }

            .patient-container .info-row {
                display: flex;
                margin-bottom: 10px;
            }

            .patient-container .info-label {
                font-weight: 600;
                width: 100px;
                color: #5a5c69;
                font-size: 14px;
            }

            .patient-container .rating {

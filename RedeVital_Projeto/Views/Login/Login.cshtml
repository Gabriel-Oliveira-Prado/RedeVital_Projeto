    <!-- Curso / Inscrição -->
    <section id="curso" class="section-course">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="section-header" data-aos="fade-up">
                        <h2 class="section-title">Comece sua Jornada com a BBTS</h2>
                        <p class="section-subtitle">Inscreva-se gratuitamente e receba materiais exclusivos sobre soluções, inovação e operações da BBTS</p>
                    </div>
                    <div class="course-form-container" data-aos="fade-up" data-aos-delay="200">
                        <form class="form" id="registrationForm">
                            <p class="form-title">Registrar-se</p>
                            <div class="input-field">
                                <input required type="text" class="input" id="nameInput" placeholder=" ">
                                <label class="label" for="nameInput">Nome:</label>
                            </div>
                            <div class="input-field">
                                <input required type="email" class="input" id="emailInput" placeholder=" ">
                                <label class="label" for="emailInput">Email:</label>
                            </div>
                            <button type="submit" class="form-submit-btn btn btn-lg w-100">Registrar-se</button>
                            <p class="form-signin">Já possui uma conta? <a href="#">Entrar</a></p>
                            <div id="successMessage" style="display:none; color: green; text-align: center; margin-top: 10px;">Cadastro realizado com sucesso! Você receberá nossos materiais exclusivos.</div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


